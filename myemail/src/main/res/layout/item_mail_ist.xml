<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#34004433">

    <ImageView
        android:id="@+id/fromHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/setEmailFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/fromHeader"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="发件人" />

    <TextView
        android:id="@+id/setMailSubject"
        android:layout_width="200dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/setEmailFrom"
        android:layout_below="@+id/setEmailFrom"
        android:layout_marginTop="20dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="邮件主题" />

    <TextView
        android:id="@+id/setSendTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fromHeader"
        android:layout_alignStart="@+id/fromHeader"
        android:layout_below="@+id/fromHeader"
        android:layout_marginTop="20dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="发送时间" />

    <TextView
        android:id="@+id/setAttachmentsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawablePadding="10dp"
        android:drawableTop="@mipmap/ic_launcher"
        tools:text="附件个数"
         />
</RelativeLayout>